

        <main>    
        <section id="viewhotelDetails">
            <h2>Details</h2>
            <div class="hotel-ticket">
                <div class="hotel-left">
                    <img src="{{result.imageUrl}}"
                        alt="">
                </div>
                <div class="hotel-right">
                    <div>
                        <h3>{{result.hotel}}</h3>
                    </div>
                    <div>
                        {{result.city}}
                    </div>
                    <p><span >Free rooms: {{result.freeRooms}}</span> </p>
                    {{#if isAuth}}
                    {{#if isOwn}}
                    <a href="/products/{{result._id}}/edit" class="edit">Edit</a>
                    <a href="/products/{{result._id}}/delete" class="remove">Delete</a>
                    {{else}}
                    {{#if usersBooked}}
                    <p><span class="green">You already have booked a room</span> </p>
                    {{else}}
                    <a href="/products/{{result._id}}/book" class="book">Book</a>
                    {{/if}}
                    {{/if}}
                    {{/if}}
                </div>

            </div>
        </section>
        </main>