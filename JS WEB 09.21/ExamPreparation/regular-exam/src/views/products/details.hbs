             <section id="details-page">

                <div class="main_card">
                    <div class="card_left">
                        <div class="card_datails">

                            <h1>Title: {{result.title}}</h1>
                            <h3>Created by an author: {{fullName}}</h3>
                            <div class="card_animal">
                                <p class="card-keyword">Keyword: {{result.keyword}}</p>
                                <p class="card-location">Location: {{result.location}}</p>
                                <p class="card-date">Date: {{result.dateCreation}}</p>
                            </div>

                            <p class="disc">Description: {{result.description}}</p>

                            <!-- If there is no registered user, do not display buttons-->
                            {{#if isAuth}}
                            <div class="social-btn">
                                <!-- Only for registered user and author of the post -->
                                {{#if isOwn}}
                                <a href="/products/{{result._id}}/edit" class="edit-btn">Edit</a>
                                <a href="/products/{{result._id}}/delete" class="del-btn">Delete</a>
                                {{else}}
                                <!-- logged in users, who have not yet voted-->
                                <a href="/products/{{result._id}}/voteUp" class="vote-up">UpVote +1</a>
                                <a href="/products/{{result._id}}/voteDown" class="vote-down">DownVote -1</a>
                                <!-- logged in user who has already voted-->
                                <p class="thanks-for-vote">Thanks For Voting</p>
                                {{/if}}

                            </div>
                            {{/if}}
                        </div>
                    </div>
                    <div class="card_right">
                        <img src="{{result.imageUrl}}" alt="image">
                    </div>
                </div>

            </section>

            <section id="votes">
                <div class="vote-info">
                    <div class="card_left">
                        <div class="card_datails">
                            <h1>Votes</h1>
                            <div class="card_vote">
                                <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                                <p class="PV">Total rating of votes: {{votes}}</p>
                            </div>
                            <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                            <p class="disc">People who voted for the post - alex@gmai.com, petar@gmail.com, petq@gmail.com</p>

                            <!-- If not display: -->
                            <p class="disc">People who voted for the post - No one has voted yet.</p>
                        </div>
                    </div>
                </div>
            </section>
