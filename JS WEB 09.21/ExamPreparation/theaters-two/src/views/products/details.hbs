<main>
            <div class="container">

                <section class="details">
                    <h1>Theater title: {{result.title}}</h1>
                    <div>
                        <img src="{{result.imageUrl}}" />
                    </div>
                </section>

                <section class="details">
                    <h3>Theater Description</h3>
                    <p>{{result.description}}</p>
                    <div class="buttons">
                        {{#if isOwn}}
                        <a class="btn delete" href="/products/{{result._id}}/delete">Delete</a>
                        <a class="btn edit" href="/products/{{result._id}}/edit">Edit</a>
                        {{else}}
                        {{#if userLikes}}
                        <span class="liked">You have already liked this play!</span>
                        {{else}}
                        <a class="btn like" href="/products/{{result._id}}/like">Like</a>
                        {{/if}}
                        {{/if}}
                    </div>
                </section>
            </div>
        </main>